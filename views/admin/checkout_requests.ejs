<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs')%>
<title>Checkout Requests</title>

<body>
    <%- include('../partials/nav.ejs')%>
    <div class="container text-center mt-6">
        <%- include('../partials/alert_box.ejs')%>
        <h1>Checkout Requests</h1>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Book Title</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% checkout_requests.forEach(function(request) { %>
                <tr>
                    <td>
                        <%= request.book_id %>
                    </td>
                    <td>
                        <%= request.user_id %>
                    </td>
                    <td>
                        <%= request.username %>
                    </td>
                    <td>
                        <%= request.title %>
                    </td>
                    <td>
                        <div class="btn-group justify-content-center" role="group">
                            <form action="/admin/accept_checkout/<%= request.transaction_id %>" method="post">
                                <button class="btn btn-success mr-2">Accept</button>
                            </form>
                            <form action="/admin/reject_checkout/<%= request.transaction_id %>" method="post">
                                <button class="btn btn-danger">Reject</button>
                            </form>
                        </div>

                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

</body>

</html>