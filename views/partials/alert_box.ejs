<% if (typeof message !=='undefined' ) { %>

<div class="<%= msg_type === 'error' ? 'alert alert-danger alert-dismissible fade show' : 'alert alert-success alert-dismissible fade show' %>" role="alert">
    <%= message %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>